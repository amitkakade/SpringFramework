<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context = "http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd"> 
    
    <!--Here you wiil also need to add Java EE Jar files for @Inject annotation-->
    
    <context:annotation-config/>
    
    <bean id="car" class="spring.driver.dependency_injection.jdk_annotation.inject.Car"></bean>
    <bean id="engine_1" class="spring.driver.dependency_injection.jdk_annotation.inject.Engine">
        <property name="name" value="Tarzan The Wonder Car"/>
    </bean>
    <bean id="engine_2" class="spring.driver.dependency_injection.jdk_annotation.inject.Engine">
        <property name="name" value="Tarzan The Wonder Car 2"/>
    </bean>
    
</beans>