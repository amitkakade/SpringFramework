<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        
        <property name="staticMethod" value="spring.driver.dependency_injection.factory_class.static_method.CarFactory.setCar_name"/>
        
        <property name="arguments">
            
            <array>
                <!--<value>spring.driver.dependency_injection.factory_class.static_method.Bolero</value>-->
                <value>spring.driver.dependency_injection.factory_class.static_method.Santro</value>
            </array>

        </property>
        
    </bean>
     
    <bean class = "spring.driver.dependency_injection.factory_class.static_method.CarFactory" id="carfactory" factory-method="getCar"></bean>
    
</beans>