<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context = "http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
    <context:annotation-config/>
    <context:component-scan base-package="spring.driver.dependency_injection.stero_type_annotation"/>
    
    <bean class="spring.driver.dependency_injection.stero_type_annotation.Employee" id = "employee">
        <property name="name" value="Amit"/>
    </bean>
    
    <!--<bean class="spring.driver.dependency_injection.stero_type_annotation.Company" id = "company">
        <property name="name" value="Krawler"/>
    </bean>-->
    
</beans>
