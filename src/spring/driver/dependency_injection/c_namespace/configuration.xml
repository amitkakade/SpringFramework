<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <bean class="spring.driver.dependency_injection.c_namespace.Employee" id = "employee" c:id="01" c:name="Amit" c:salary="250000" c:company-ref="company"></bean>
    <bean class="spring.driver.dependency_injection.c_namespace.Company" id="company" c:name="Deskera" c:city="Pune"></bean>
    
</beans>