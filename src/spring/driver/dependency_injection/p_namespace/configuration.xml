<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <bean class="spring.driver.dependency_injection.p_namespace.Employee" id = "employee" p:id="01" p:name="Amit" p:salary="250000" p:company-ref="company"></bean>
    <bean class="spring.driver.dependency_injection.p_namespace.Company" id="company" p:name="Deskera" p:city="Pune"></bean>
    
</beans>