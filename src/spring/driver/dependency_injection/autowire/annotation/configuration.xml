<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context = "http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
    <context:annotation-config/>
    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>
    <bean class="spring.driver.dependency_injection.autowire.annotation.Employee" id="employee"></bean>
    <bean class="spring.driver.dependency_injection.autowire.annotation.Company" id="company1">
        <property name = "name" value="Deskera"/>
    </bean>
    <bean class="spring.driver.dependency_injection.autowire.annotation.Company" id="company2">
        <property name = "name" value="Krawler"/>
    </bean>
    
</beans>