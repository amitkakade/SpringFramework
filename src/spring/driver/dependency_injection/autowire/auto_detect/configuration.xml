<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
    
    <bean class="spring.driver.dependency_injection.autowire.auto_detect.Employee" id="employee" autowire="autodetect"></bean>    
    <bean class="spring.driver.dependency_injection.autowire.auto_detect.Company" id = "company1">
        <property name = "name" value="Deskera"/>
    </bean>
    <bean class="spring.driver.dependency_injection.autowire.auto_detect.Company" id = "company_old" autowire-candidate="false">
        <property name = "name" value="Krawler"/>
    </bean>
    
</beans>
